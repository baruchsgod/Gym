@model IEnumerable<Gym.Models.Membership>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<br />
<br />
<div class="container">
    <br /><br /><br />
    <p>
        @Html.ActionLink("Create Membership", "Create")
    </p>
    <table class="table" id="memberships">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.MembershipType)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.DurationInMonths)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.DiscountRate)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr id=@item.Id>
                        <td>
                            @Html.DisplayFor(modelItem => item.MembershipType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DurationInMonths)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiscountRate)
                        </td>
                        <td>
                            <button class="btn-link">@Html.ActionLink("Edit", "Edit", "Memberships", new { id = item.Id }, new { @class = "remove_text_decoration" })</button> |
                            <button class="btn-link">@Html.ActionLink("Details", "membershipDetails", "Memberships")</button>  |
                            <button class="btn-link js-delete remove_text_decoration" data-membership-id=@item.Id>Delete</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="text-align:center">There are not memberships to view right now</td>
                </tr>
            }
        </tbody>
        


    </table>
</div>

@section scripts
    {
    <script>
            $(document).ready(function () {

                $("#memberships").DataTable();

                $("#memberships ").on("click", ".js-delete",function () {
                    var button = $(this);
                    var tableRow = "#" + button.attr("data-membership-id");
                    console.log(button);

                    bootbox.confirm("Are you sure you want to delete this membership?", function (result) {
                        if (result) {
                            $.ajax({

                                url: "/Memberships/Delete/" + button.attr("data-membership-id"),
                                method: "POST",
                                success: function () { $(tableRow).remove(); }
                            });
                        }
                    });

                });
            });
    </script>
}
